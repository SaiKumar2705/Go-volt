<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        > <!-- to show what the parent is -->


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            android:text="Mario  Rossi"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="xxx kg di CO2 risparmiati"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_navigation_icon"
                            app:civ_border_width="2dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@drawable/ic_drawer_background"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/ic_menu_profile"
                            android:textColor="@color/green" />

                        <TextView
                            android:id="@+id/profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.7"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="IL MIO PROFILO"
                            android:textColor="@color/green"

                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/ic_scoter"
                            android:textColor="@color/green" />

                        <TextView
                            android:id="@+id/corse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.7"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="LE MIE CORSE"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/ic_wallet"
                            android:textColor="@color/green" />

                        <TextView
                            android:id="@+id/wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.7"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="WALLET &amp; PACCHETTI"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/ic_premium"
                            android:textColor="@color/green" />

                        <TextView
                            android:id="@+id/premium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.7"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="PREMIUM"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                      <!--  <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/ic_community"
                            android:textColor="@color/green" />

                        <TextView
                            android:id="@+id/community"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.7"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="COMMUNITY"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/ic_business"
                            android:textColor="@color/green" />

                        <TextView
                            android:id="@+id/business"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.7"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="BUSINESS"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/ic_help"
                            android:textColor="@color/green" />

                        <TextView
                            android:id="@+id/help"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.7"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="HELP &amp; FAQ"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        android:padding="5dp">

                        <RelativeLayout
                            android:id="@+id/layout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="5dp"
                            android:gravity="left"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/instra"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/ic_instagram" />

                            <ImageView
                                android:id="@+id/fb"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="7dp"
                                android:layout_toRightOf="@+id/instra"

                                android:background="@drawable/ic_fb" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_toRightOf="@+id/fb"
                                android:background="@drawable/ic_linkden" />


                        </RelativeLayout>

                        <Button
                            android:id="@+id/logout"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/round_corner_green"
                            android:text="LOGOUT"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_weight="1" >
            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_close" />
        </LinearLayout>/
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
