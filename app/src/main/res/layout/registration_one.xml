<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="4"> <!-- to show what the parent is -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#045400FF"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/top_log_width_heught"
                    android:layout_height="@dimen/top_log_height"
                    android:background="@drawable/ic_login_top"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Registrati"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_firstdot" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edittext_image_change"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="25dp"
                        android:paddingRight="30dp"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/light_green"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_image_change"
                            android:hint="Password (min. 8 caratteri)"
                            android:inputType="textPassword"
                            android:paddingLeft="25dp"
                            android:paddingRight="50dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textColorHint="@color/light_green"

                            android:textSize="15sp" />

                        <ImageButton
                            android:id="@+id/info"
                            style="?android:buttonBarButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginLeft="-60dp"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="5dp"
                            android:src="@drawable/ic_i_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_confirmpassword"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_image_change"
                            android:hint="Conferma password"
                            android:inputType="textPassword"
                            android:paddingLeft="25dp"
                            android:paddingRight="50dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textColorHint="@color/light_green"
                            android:textSize="15sp" />

                        <ImageButton
                            android:id="@+id/tick"
                            style="?android:buttonBarButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginLeft="-60dp"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="5dp"
                            android:src="@drawable/ic_i_icon"
                            android:visibility="gone" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/mLinearLayout"
                        android:layout_width="match_parent"

                        android:background="@drawable/input_field_full"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <EditText
                            android:id="@+id/et_countrycode"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="2"
                            android:background="@android:color/transparent"
                            android:digits="0123456789+"
                            android:hint="+39"
                            android:inputType="text"
                            android:maxLength="4"
                            android:maxLines="1"
                            android:padding="2dp"
                            android:text="+39"
                            android:textColor="@android:color/white"
                            android:textColorHint="@color/light_green"
                            android:textSize="15sp" />


                        <EditText
                            android:id="@+id/et_phonenumber"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:background="@android:color/transparent"
                            android:digits="0123456789"
                            android:hint="N.telefono"
                            android:inputType="number"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:padding="2dp"
                            android:paddingStart="35dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textColorHint="@color/light_green"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout3"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/switch_label_one"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:text="@string/reg_swicth_one"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small" />

                    <ToggleButton
                        android:id="@+id/togglebutton_term"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/toggle_selector"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textOff=""
                        android:textOn="" />

                </LinearLayout>

                <!--  <LinearLayout
                      android:id="@+id/layout5"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/layout4"
                      android:layout_marginLeft="30dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginRight="20dp"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/switch_label_two"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_weight="0.8"
                          android:text="@string/reg_switch_two"
                          android:textColor="@color/white"
                          android:textSize="@dimen/text_size_small" />

                      <ToggleButton
                          android:id="@+id/toggleButton1"
                          android:layout_width="50dp"
                          android:layout_height="25dp"
                          android:layout_centerVertical="true"
                          android:layout_margin="10dp"
                          android:background="@drawable/toggle_selector"
                          android:focusable="false"
                          android:focusableInTouchMode="false"
                          android:textOff=""
                          android:textOn="" />
                  </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/layout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout5"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/switch_label_three"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:text="@string/reg_switcth_three"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_size_small" />

                    <ToggleButton
                        android:id="@+id/toggleButton2"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/toggle_selector"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout6"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/switch_label_four"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:text="@string/reg_switcth_four"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small" />

                    <ToggleButton
                        android:id="@+id/switch4"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/toggle_selector"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonOk"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_corner_black"
                android:text="AVANTI"
                android:textColor="@color/green" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>