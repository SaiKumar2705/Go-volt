                                    android:layout_height="wrap_content"
                                    android:text="1 minuto"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
