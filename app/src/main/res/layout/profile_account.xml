                                android:layout_height="@dimen/bike_logo_size"
                                android:layout_gravity="right"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/ic_login_top" />
                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_image"
                                android:layout_width="@dimen/profile_pic_width_height"
                                android:layout_height="@dimen/profile_pic_width_height"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_pic"
                                app:civ_border_width="2dp" />
                        </RelativeLayout>






                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="Account"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_size_header"
                            android:textStyle="bold" />
                    </LinearLayout>-->

                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/email_label_one"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/text_size"
                        android:paddingRight="10dp"
                        android:paddingLeft="45dp"
                        android:background="@drawable/edittext_image_change_three"
                        android:textColor="@color/black"
                        android:hint="Email"
                        />
                    <EditText
                        android:id="@+id/password_label_one"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:textSize="@dimen/text_size"
                        android:paddingRight="10dp"
                        android:paddingLeft="45dp"
                        android:background="@drawable/edittext_image_change_three"
                        android:textColor="@color/black"
                        android:hint="* * * * * * * * "
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_lock_black" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:hint="Cambia password"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textColorHint="@color/green"
                        android:textSize="@dimen/text_size" />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:textSize="@dimen/text_size"
                        android:paddingRight="40dp"
                        android:paddingLeft="45dp"
                        android:textColor="@color/black"
                        android:hint="Nuova Password "
                        android:background="@drawable/edittext_image_change_three"

                        />
                    <ImageButton
                        android:id="@+id/green_right_mark_one"
                        style="?android:buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginLeft="-60dp"
                        android:src="@drawable/ic_right_small" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/password_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:paddingRight="40dp"
                        android:paddingLeft="45dp"
                        android:textSize="@dimen/text_size"
                        android:background="@drawable/edittext_image_change_three"
                        android:textColor="@color/black"
                        android:hint="Ripeti Password"
                        />
                    <ImageButton
                        android:id="@+id/green_right_mark_two"
                        style="?android:buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginLeft="-60dp"
                        android:paddingBottom="5dp"
                        android:src="@drawable/ic_right_small" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        android:text="RICORDA"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="@string/password_change_activity"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/password_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password dimenticata?"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/white"
                    android:background="@drawable/round_corner_green"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"/>

            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/submit"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_clicking"/>
    </LinearLayout>

</ScrollView>
